@using FlowManager.Client.ViewModels
@using FlowManager.Client.Services
@using FlowManager.Client.DTOs
@using FlowManager.Shared.DTOs.Responses.User
@using FlowManager.Shared.DTOs.Requests.User
@using FlowManager.Shared.DTOs.Responses.Role

@if (ShowAddForm)
{
    <div class="popup-backdrop" @onclick="CancelForm">
        <div class="popup-container" @onclick:stopPropagation="true">
            <div class="popup-header">
                <h3>Create a new user</h3>
            </div>

            <form @onsubmit="RegisterUser" @onsubmit:preventDefault="true">
                <div class="form-field">
                    <label for="name">*Name:</label>
                    <input @bind="_name"
                           type="text"
                           id="name"
                           name="name"
                           placeholder="e.g. John Doe"
                           required />
                </div>

                <div class="form-field">
                    <label for="email">*Email:</label>
                    <input @bind="_email"
                           type="email"
                           id="email"
                           name="email"
                           placeholder="e.g. john.doe@example.com"
                           required />
                </div>

                <div class="form-field">
                    <label for="phone-number">*Phone number (must start with +):</label>
                    <input @bind="_phoneNumber"
                           type="tel"
                           id="phone-number"
                           pattern="^\+[1-9][0-9]{7,14}$"
                           required>
                </div>

                <div class="department-selector">
                    <label class="department-label">*Department:</label>
                    <div class="custom-dropdown" @onclick="ToggleDropdown">
                        <div class="dropdown-selected">
                            @(_selectedStepName ?? "Select a department")
                            <span class="dropdown-arrow">▼</span>
                        </div>
                        @if (_isDropdownOpen)
                        {
                            <div class="dropdown-options">
                                @foreach (StepVM step in _availableSteps)
                                {
                                    <div class="dropdown-option" @onclick="() => SelectStep(step)" @onclick:stopPropagation="true">
                                        @step.Name
                                    </div>
                                }
                            </div>
                        }
                    </div>
                </div>

                <div class="form-field">
                    <label class="section-label">Roles</label>
                    <div class="checkbox-group">
                        <div class="role-checkbox">
                            <input type="checkbox"
                                   name="adminRole"
                                   @bind="_isNewUserAdmin" />
                            <label for="adminRole">
                                <span class="checkmark"></span>
                                <span class="checkbox-label">Admin</span>
                                <span class="role-description">Full system access</span>
                            </label>
                        </div>
                        <div class="role-checkbox">
                            <input type="checkbox"
                                   name="moderatorRole"
                                   @bind="_isNewUserModerator" />
                            <label for="moderatorRole">
                                <span class="checkmark"></span>
                                <span class="checkbox-label">Moderator</span>
                                <span class="role-description">Content management</span>
                            </label>
                        </div>
                    </div>
                </div>

                <div class="info-card">
                    <div class="info-icon">
                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <circle cx="12" cy="12" r="10"></circle>
                            <line x1="12" y1="16" x2="12" y2="12"></line>
                            <line x1="12" y1="8" x2="12.01" y2="8"></line>
                        </svg>
                    </div>
                    <span>All users are automatically assigned the employee role</span>
                </div>

                <div class="modal-actions">
                    <button type="button" @onclick="CancelForm" class="btn btn-secondary">
                        Cancel
                    </button>
                    <button type="submit" 
                            class="btn btn-primary"
                            disabled="@(!IsSubmitValid())">
                        Create User
                    </button>
                </div>

                @if (!string.IsNullOrEmpty(_onSubmitMessage))
                {
                    <div class="onSubmitMessage">
                        <span class="onSubmit @(_onSubmitSuccess ? "success" : "fail")"> @_onSubmitMessage </span>
                    </div>
                }
            </form>
        </div>
    </div>
}