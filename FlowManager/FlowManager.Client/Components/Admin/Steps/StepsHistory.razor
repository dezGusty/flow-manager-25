@page "/steps-history"
@using FlowManager.Shared.DTOs.Responses.StepHistory

<PageTitle>History</PageTitle>

<h2 class="page-title">History</h2>

@if (history == null)
{
    <p>Loading...</p>
}
else if (!history.Any())
{
    <p>No history records found.</p>
}
else
{
    <table class="history-table">
        <thead>
            <tr>
                <th>Date</th>
                <th>Action</th>
                <th>Message</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < history.Count; i++)
            {
                <tr>
                    <td>@history[i].DateTime.ToLocalTime().ToString("g")</td>
                    <td>@history[i].Action</td>
                    <td>@messages[i]</td>
                </tr>
            }
        </tbody>
    </table>
}