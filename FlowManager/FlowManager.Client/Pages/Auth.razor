@page "/auth"
<div class="fullAuth">

    <div class="auth-page">
        <div class="left-animation @(animateLeft ? "slide-left-out" : "")">
            <div class="auth-left">
                <img src="lib/siemens-logo.png" alt="Siemens Logo" class="siemens-logo"/>

                <h1>Flow Simulator</h1>
                <div class="auth-underline"></div>
                <h2 class="auth-motto">Approve, optimize, evolve – all in one place.</h2>
                <p class="auth-desc">Empower your teams with structured, fast, and transparent approvals.</p>
            </div>
        </div>

        <div class="auth-right @(animateRight ? "slide-right-out" : "")">
            <form class="auth-form" @onsubmit="HandleLogin">
                <h2 class="auth-title">Login</h2>
                <p class="auth-subtitle">Access your account</p>

                <input type="email" placeholder="Enter your email" @bind="email" required/>
                <input type="password" placeholder="Enter your password" @bind="password" required/>

                <button type="submit">Sign In</button>
                <a href="#" class="forgot-password">Reset Password?</a>

                @if (!string.IsNullOrEmpty(errorMessage))
                {
                    <p class="auth-error">@errorMessage</p>
                }
            </form>
        </div>
    </div>
</div>

