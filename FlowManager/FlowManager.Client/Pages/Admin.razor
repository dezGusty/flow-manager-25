@page "/admin"
@layout MainLayout
@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.AspNetCore.Components.WebAssembly.Http
@using Microsoft.AspNetCore.Authorization
@inject NavigationManager Navigation
@inject AuthenticationStateProvider AuthProvider
@inject CookieAuthStateProvider CookieAuthStateProvider
@inject HttpClient Http
@attribute [Authorize(Roles = "Admin")]

<FlowManager.Client.Components.NavBar.Navbar/>

<!-- Page description -->
<div class="page-description">
    <h2>Admin dashboard</h2>
    <p>Manage system users, flows, forms and steps</p>
</div>

<div class="admin-container">
    <!-- Left sidebar -->
    <nav class="sidebar">
        <!-- Navigation items -->
        <div class="nav-main">
            <!-- USERS -->
            <button class="nav-item @(_activeTab == "USERS" ? "active" : "")"
                    @onclick="@(() => SetActiveTab("USERS"))">
                <svg xmlns="http://www.w3.org/2000/svg"
                     viewBox="0 0 24 24"
                     fill="currentColor"
                     style="width: 16px; height: 16px; display: inline-block; margin-right: 8px;">
                    <path fill-rule="evenodd"
                          d="M7.5 6a4.5 4.5 0 119 0 4.5 4.5 0 01-9 0zM3.751 20.105a8.25 8.25 0 0116.498 0 .75.75 0 01-.437.695A18.683 18.683 0 0112 22.5c-2.786 0-5.433-.608-7.812-1.7a.75.75 0 01-.437-.695z"
                          clip-rule="evenodd" />
                </svg>
                Users & teams
            </button>

            <!-- FLOWS -->
            <button class="nav-item @(_activeTab == "FLOWS" ? "active" : "")"
                    @onclick="@(() => SetActiveTab("FLOWS"))">
                <svg xmlns="http://www.w3.org/2000/svg"
                     viewBox="0 0 24 24"
                     fill="currentColor"
                     style="width: 16px; height: 16px; display: inline-block; margin-right: 8px;">
