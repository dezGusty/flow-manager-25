                </svg>
                Departments
            </button>

            <!-- FORM TEMPLATES -->
           
        
        <button class="nav-item @(_activeTab == "WORKFLOW" ? "active" : "")"
                @onclick="@(() => SetActiveTab("WORKFLOW"))">
            <svg xmlns="http://www.w3.org/2000/svg"
                 viewBox="0 0 24 24"
                 fill="currentColor"
                 style="width: 16px; height: 16px; display: inline-block; margin-right: 8px;">
                <path fill-rule="evenodd"
                      d="M12 2.25a.75.75 0 01.75.75v2.25a.75.75 0 01-1.5 0V3a.75.75 0 01.75-.75zM7.5 12a4.5 4.5 0 119 0 4.5 4.5 0 01-9 0zM18.894 6.166a.75.75 0 00-1.06-1.06l-1.591 1.59a.75.75 0 101.06 1.061l1.591-1.59zM21.75 12a.75.75 0 01-.75.75h-2.25a.75.75 0 010-1.5H21a.75.75 0 01.75.75zM17.834 18.894a.75.75 0 001.06-1.06l-1.59-1.591a.75.75 0 10-1.061 1.06l1.59 1.591zM12 18a.75.75 0 01.75.75V21a.75.75 0 01-1.5 0v-2.25A.75.75 0 0112 18zM7.758 17.303a.75.75 0 00-1.061-1.06l-1.591 1.59a.75.75 0 001.06 1.061l1.591-1.59zM6 12a.75.75 0 01-.75.75H3a.75.75 0 010-1.5h2.25A.75.75 0 016 12zM6.697 7.757a.75.75 0 001.06-1.06l-1.59-1.591a.75.75 0 00-1.061 1.06l1.59 1.591z"
                      clip-rule="evenodd" />
            </svg>
            Workflow Builder
        </button>
      
        <!-- FLOW FORMS HISTORY -->
        <button class="nav-item @(_activeTab == "FLOWFORMSHISTORY" ? "active" : "")"
                @onclick="@(() => SetActiveTab("FLOWFORMSHISTORY"))">
            <svg xmlns="http://www.w3.org/2000/svg"
                 viewBox="0 0 24 24"
                 fill="currentColor"
                 style="width: 16px; height: 16px; display: inline-block; margin-right: 8px;">
                <path fill-rule="evenodd"
                      d="M7.502 6h7.128A3.375 3.375 0 0118 9.375v9.375a3 3 0 003-3V6.108c0-1.505-1.125-2.811-2.664-2.94a48.972 48.972 0 00-.673-.05A3 3 0 0015 1.5h-1.5a3 3 0 00-2.663 1.618c-.225.015-.45.032-.673.05C8.662 3.295 7.554 4.542 7.502 6zM13.5 3A1.5 1.5 0 0012 4.5h4.5A1.5 1.5 0 0015 3h-1.5z"
                      clip-rule="evenodd" />
                <path fill-rule="evenodd"
                      d="M3 9.375C3 8.339 3.84 7.5 4.875 7.5h9.75c1.036 0 1.875.84 1.875 1.875v11.25c0 1.035-.84 1.875-1.875 1.875h-9.75A1.875 1.875 0 013 20.625V9.375z"
                      clip-rule="evenodd" />
            </svg>
            Flow Forms History
        </button>
        </div>
    <!-- Impersonation Button -->
    <button class="nav-item impersonation-btn" @onclick="ShowImpersonationModal">
        <svg xmlns="http://www.w3.org/2000/svg"
             viewBox="0 0 24 24"
             fill="currentColor"
             style="width: 16px; height: 16px; display: inline-block; margin-right: 8px;">
            <path fill-rule="evenodd"
                  d="M18.685 19.097A9.723 9.723 0 0021.75 12c0-5.385-4.365-9.75-9.75-9.75S2.25 6.615 2.25 12a9.723 9.723 0 003.065 7.097A9.716 9.716 0 0012 21.75a9.716 9.716 0 006.685-2.653zm-12.54-1.285A7.486 7.486 0 0112 15a7.486 7.486 0 015.855 2.812A8.224 8.224 0 0112 20.25a8.224 8.224 0 01-5.855-2.438zM15.75 9a3.75 3.75 0 11-7.5 0 3.75 3.75 0 017.5 0z"
                  clip-rule="evenodd" />
        </svg>
        Impersonate User
    </button>

        <!-- Logout -->
        <div class="nav-bottom">
            <button class="nav-item logout-btn" @onclick="@(() => Logout())">
                <svg xmlns="http://www.w3.org/2000/svg"
                     viewBox="0 0 24 24"
                     fill="currentColor"
                     style="width: 16px; height: 16px; display: inline-block; margin-right: 8px;">
                    <path fill-rule="evenodd"
                          d="M7.5 3.75A1.5 1.5 0 006 5.25v13.5a1.5 1.5 0 001.5 1.5h6a1.5 1.5 0 001.5-1.5V15a.75.75 0 011.5 0v3.75a3 3 0 01-3 3h-6a3 3 0 01-3-3V5.25a3 3 0 013-3h6a3 3 0 013 3V9A.75.75 0 0115 9V5.25a1.5 1.5 0 00-1.5-1.5h-6z"
                          clip-rule="evenodd" />
                    <path fill-rule="evenodd"
                          d="M19.5 12a.75.75 0 000-1.5l-6-6a.75.75 0 00-1.06 1.06l4.72 4.72H9a.75.75 0 000 1.5h8.16l-4.72 4.72a.75.75 0 101.06 1.06l6-6z"
                          clip-rule="evenodd" />
                </svg>
                Logout
            </button>
        </div>
    </nav>

    <!-- Main content area -->
    <main class="main-content">
        @if (_activeTab == "USERS")
        {
            <FlowManager.Client.Components.Admin.Members.Members></FlowManager.Client.Components.Admin.Members.Members>
        }
        @if (_activeTab == "FLOWS")
        {
            <FlowManager.Client.Components.Admin.Flows.Flows></FlowManager.Client.Components.Admin.Flows.Flows>
        }
        @if (_activeTab == "DEPARTMENTS")
        {
            <FlowManager.Client.Components.Admin.Steps.Steps></FlowManager.Client.Components.Admin.Steps.Steps>
        }
         @if (_activeTab == "WORKFLOW") 
        {
           <FlowManager.Client.Components.Admin.WorkflowCarousel.WorkflowCarousel></FlowManager.Client.Components.Admin.WorkflowCarousel.WorkflowCarousel>
        }
        @if (_activeTab == "FLOWFORMSHISTORY")
        {
            <FlowManager.Client.Components.Admin.FlowFormsHistory.FlowFormsHistory />
        }
    </main>
</div>
<!-- Impersonation Modal -->
@if (showImpersonationModal)
{
    <div class="modal-overlay" @onclick="CloseImpersonationModal">
        <div class="modal-content impersonation-modal-content" @onclick:stopPropagation="true">
            <div class="modal-header">
                <h3>Impersonate User</h3>
                <button class="close-btn" @onclick="CloseImpersonationModal">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
                        <path fill-rule="evenodd" d="M5.47 5.47a.75.75 0 011.06 0L12 10.94l5.47-5.47a.75.75 0 111.06 1.06L13.06 12l5.47 5.47a.75.75 0 11-1.06 1.06L12 13.06l-5.47 5.47a.75.75 0 01-1.06-1.06L10.94 12 5.47 6.53a.75.75 0 010-1.06z" clip-rule="evenodd" />
                    </svg>
                </button>
            </div>

            <div class="modal-body">
                <!-- Search Bar -->
                <div class="impersonation-search-container">
                    <div class="search-input-wrapper">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="search-icon">
                            <path fill-rule="evenodd" d="M10.5 3.75a6.75 6.75 0 100 13.5 6.75 6.75 0 000-13.5zM2.25 10.5a8.25 8.25 0 1114.59 5.28l4.69 4.69a.75.75 0 11-1.06 1.06l-4.69-4.69A8.25 8.25 0 012.25 10.5z" clip-rule="evenodd" />
                        </svg>
                        <input type="text"
                               placeholder="Search users by name or email..."
                               @bind="impersonationSearchTerm"
                               @oninput="OnImpersonationSearchInput"
                               class="search-input" />
                        @if (!string.IsNullOrEmpty(impersonationSearchTerm))
                        {
                            <button class="clear-search-btn" @onclick="ClearImpersonationSearch">
                                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
                                    <path fill-rule="evenodd" d="M5.47 5.47a.75.75 0 011.06 0L12 10.94l5.47-5.47a.75.75 0 111.06 1.06L13.06 12l5.47 5.47a.75.75 0 11-1.06 1.06L12 13.06l-5.47 5.47a.75.75 0 01-1.06-1.06L10.94 12 5.47 6.53a.75.75 0 010-1.06z" clip-rule="evenodd" />
                                </svg>
                            </button>
                        }
                    </div>
                </div>

                @if (isLoadingUsers)
                {
                    <div class="loading-container">
                        <div class="spinner"></div>
                        <p>Loading users...</p>
                    </div>
                }
                else if (availableUsers?.Any() == true)
                {
                    <div class="users-list">
                        @foreach (var user in availableUsers)
                        {
                            <div class="user-item" @onclick="() => SelectUserForImpersonation(user)">
                                <div class="user-avatar">
                                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
                                        <path fill-rule="evenodd" d="M18.685 19.097A9.723 9.723 0 0021.75 12c0-5.385-4.365-9.75-9.75-9.75S2.25 6.615 2.25 12a9.723 9.723 0 003.065 7.097A9.716 9.716 0 0012 21.75a9.716 9.716 0 006.685-2.653zm-12.54-1.285A7.486 7.486 0 0112 15a7.486 7.486 0 015.855 2.812A8.224 8.224 0 0112 20.25a8.224 8.224 0 01-5.855-2.438zM15.75 9a3.75 3.75 0 11-7.5 0 3.75 3.75 0 017.5 0z" clip-rule="evenodd" />
                                    </svg>
                                </div>
                                <div class="user-info">
                                    <h4>@user.Name</h4>
                                    <p>@user.Email</p>
                                    @if (user.Roles?.Any() == true)
                                    {
                                        <div class="user-roles">
                                            @foreach (var role in user.Roles)
                                            {
                                                <span class="role-badge role-@role.ToLower()">@role</span>
                                            }
                                        </div>
                                    }
                                </div>
                                <div class="user-select-icon">
                                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
                                        <path fill-rule="evenodd" d="M16.28 11.47a.75.75 0 010 1.06l-7.5 7.5a.75.75 0 01-1.06-1.06L14.69 12 7.72 5.03a.75.75 0 011.06-1.06l7.5 7.5z" clip-rule="evenodd" />
                                    </svg>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="no-users-found">
                        @if (!string.IsNullOrEmpty(impersonationSearchTerm))
                        {
                            <p>No users found matching "@impersonationSearchTerm"</p>
                            <button @onclick="ClearImpersonationSearch" class="clear-search-btn-alt">Clear search</button>
                        }
                        else
                        {
                            <p>No users available for impersonation.</p>
                        }
                    </div>
                }

                <!-- Reason Input -->
                @if (selectedUserForImpersonation != null)
                {
                    <div class="impersonation-reason-section">
                        <div class="selected-user-info">
                            <h4>Selected User: @selectedUserForImpersonation.Name</h4>
                            <p>@selectedUserForImpersonation.Email</p>
                        </div>

                        <div class="reason-input-group">
                            <label class="reason-label">Reason for impersonation (optional):</label>
                            <textarea class="reason-textarea"
                                      placeholder="Enter the reason for impersonating this user..."
                                      @bind="impersonationReason"
                                      maxlength="200"></textarea>
                            <div class="character-count">@(impersonationReason?.Length ?? 0)/200</div>
                        </div>

                        <div class="impersonation-actions">
                            <button class="cancel-impersonation-btn" @onclick="CancelUserSelection">
                                Cancel
                            </button>
                            <button class="start-impersonation-btn"
                                    @onclick="StartImpersonation"
                                    disabled="@isStartingImpersonation">
                                @if (isStartingImpersonation)
                                {
                                    <div class="spinner-small"></div>
                                    <span>Starting...</span>
                                }
                                else
                                {
                                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
                                        <path fill-rule="evenodd" d="M8.25 3.75H19.5a.75.75 0 01.75.75v11.25a.75.75 0 01-1.5 0V6.31L5.03 20.03a.75.75 0 01-1.06-1.06L17.69 5.25H8.25a.75.75 0 010-1.5z" clip-rule="evenodd" />
                                    </svg>
                                    <span>Start Impersonation</span>
                                }
                            </button>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
}