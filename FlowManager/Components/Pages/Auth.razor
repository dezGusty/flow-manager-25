@page "/auth"

<div class="container">
    <div class="toggle">
        <button id="show-signin" class="active">Sign In</button>
        <button id="show-signup">Sign Up</button>
    </div>

    <div class="form-container">
        <!-- Sign In Form -->
        <form id="signin-form" class="form active">
            <h2 class="h2-form">Welcome Back</h2>
            <input type="email" placeholder="Email" required />
            <input type="password" placeholder="Password" required />
            <button type="submit">Sign In</button>
            <p class="switch-text">Don't have an account? <span id="switch-to-signup">Sign Up</span></p>
        </form>

        <!-- Sign Up Form -->
        <form id="signup-form" class="form">
            <h2 class="h2-form">Create Account</h2>
            <input type="text" placeholder="Full Name" required />
            <input type="email" placeholder="Email" required />
            <input type="password" placeholder="Password" required />
            <button type="submit">Sign Up</button>
            <p class="switch-text">Already have an account? <span id="switch-to-signin">Sign In</span></p>
        </form>
    </div>
</div>

<script>
    const showSignin = document.getElementById("show-signin");
    const showSignup = document.getElementById("show-signup");
    const signinForm = document.getElementById("signin-form");
    const signupForm = document.getElementById("signup-form");

    function showForm(formToShow) {
        if (formToShow === "signin") {
            signinForm.classList.add("active");
            signupForm.classList.remove("active");
            showSignin.classList.add("active");
            showSignup.classList.remove("active");
        } else {
            signupForm.classList.add("active");
            signinForm.classList.remove("active");
            showSignup.classList.add("active");
            showSignin.classList.remove("active");
        }
    }

    showSignin.addEventListener("click", () => showForm("signin"));
    showSignup.addEventListener("click", () => showForm("signup"));
    document.getElementById("switch-to-signup").addEventListener("click", () => showForm("signup"));
    document.getElementById("switch-to-signin").addEventListener("click", () => showForm("signin"));
</script>